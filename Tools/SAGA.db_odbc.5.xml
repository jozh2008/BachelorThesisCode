<tool name="SAGA.db_odbc.5" id="saga_db_odbc_5" version="1.0.0">
  <description>Import Table</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py output_data_TABLE $output_data_TABLE  name SAGA.db_odbc.5 ODBC_DSN '$ODBC_DSN'
ODBC_USR '$ODBC_USR'
ODBC_PWD '$ODBC_PWD'
CONNECTION '$CONNECTION'
TABLES '$TABLES'
prefer $prefer
response $response
outputType_TABLE $OutputSection_TABLE.outputType_TABLE
transmissionMode_TABLE $OutputSection_TABLE.transmissionMode_TABLE]]></command>
  <inputs>
    <param name="ODBC_DSN" type="text" optional="true" label="DSN" help="Data Source Name"/>
    <param name="ODBC_USR" type="text" optional="true" label="User" help="User Name"/>
    <param name="ODBC_PWD" type="text" optional="true" label="Password" help="Password"/>
    <param name="CONNECTION" type="text" optional="true" label="Server Connection" help="Server Connection"/>
    <param name="TABLES" type="text" optional="true" label="Tables" help="Tables"/>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_TABLE" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_TABLE" type="select" label="Table" help="Table">
        <option value="text/csv">csv</option>
      </param>
      <param name="transmissionMode_TABLE" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_TABLE" format="csv" hidden="false"/>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Imports a table from a database via ODBC.]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
