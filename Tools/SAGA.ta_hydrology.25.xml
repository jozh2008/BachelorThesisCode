<tool name="SAGA.ta_hydrology.25" id="saga_ta_hydrology_25" version="1.0.0">
  <description>LS-Factor, Field Based</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayDEM False  isArrayFIELDS False  output_data_STATISTICS $output_data_STATISTICS  output_data_UPSLOPE_AREA $output_data_UPSLOPE_AREA  output_data_UPSLOPE_LENGTH $output_data_UPSLOPE_LENGTH  output_data_UPSLOPE_SLOPE $output_data_UPSLOPE_SLOPE  output_data_LS_FACTOR $output_data_LS_FACTOR  output_data_BALANCE $output_data_BALANCE  name SAGA.ta_hydrology.25 DEM $DEM
FIELDS $FIELDS
METHOD $METHOD
METHOD_SLOPE $METHOD_SLOPE
METHOD_AREA $METHOD_AREA
STOP_AT_EDGE $STOP_AT_EDGE
EROSIVITY $EROSIVITY
STABILITY $STABILITY
prefer $prefer
response $response
outputType_STATISTICS $OutputSection_STATISTICS.outputType_STATISTICS
transmissionMode_STATISTICS $OutputSection_STATISTICS.transmissionMode_STATISTICS
outputType_UPSLOPE_AREA $OutputSection_UPSLOPE_AREA.outputType_UPSLOPE_AREA
transmissionMode_UPSLOPE_AREA $OutputSection_UPSLOPE_AREA.transmissionMode_UPSLOPE_AREA
outputType_UPSLOPE_LENGTH $OutputSection_UPSLOPE_LENGTH.outputType_UPSLOPE_LENGTH
transmissionMode_UPSLOPE_LENGTH $OutputSection_UPSLOPE_LENGTH.transmissionMode_UPSLOPE_LENGTH
outputType_UPSLOPE_SLOPE $OutputSection_UPSLOPE_SLOPE.outputType_UPSLOPE_SLOPE
transmissionMode_UPSLOPE_SLOPE $OutputSection_UPSLOPE_SLOPE.transmissionMode_UPSLOPE_SLOPE
outputType_LS_FACTOR $OutputSection_LS_FACTOR.outputType_LS_FACTOR
transmissionMode_LS_FACTOR $OutputSection_LS_FACTOR.transmissionMode_LS_FACTOR
outputType_BALANCE $OutputSection_BALANCE.outputType_BALANCE
transmissionMode_BALANCE $OutputSection_BALANCE.transmissionMode_BALANCE]]></command>
  <inputs>
    <param name="DEM" type="data" optional="false" label="Elevation" help="Elevation The following data types are allowed in the txt file:  x-ogc-aaigrid, png, x-ogc-envi, tiff" format="txt"/>
    <param name="FIELDS" type="data" optional="false" label="Fields" help="Fields The following data types are allowed in the txt file:  json, xml, vnd.google-earth.kml+xml" format="txt"/>
    <param name="METHOD" type="select" optional="true" label="LS Calculation" help="LS Calculation">
      <option value="Desmet_&amp;_Govers_1996">Desmet &amp; Govers 1996</option>
      <option selected="true" value="Moore_&amp;_Nieber_1989">Moore &amp; Nieber 1989</option>
      <option value="Wischmeier_&amp;_Smith_1978">Wischmeier &amp; Smith 1978</option>
    </param>
    <param name="METHOD_SLOPE" type="select" optional="true" label="Type of Slope" help="Type of Slope">
      <option value="distance_weighted_average_catchment_slope">distance weighted average catchment slope</option>
      <option selected="true" value="local_slope">local slope</option>
    </param>
    <param name="METHOD_AREA" type="select" optional="true" label="Specific Catchment Area" help="Specific Catchment Area">
      <option value="catchment_length_(square_root_of_catchment_area)">catchment length (square root of catchment area)</option>
      <option value="effective_flow_length">effective flow length</option>
      <option selected="true" value="specific_catchment_area_(contour_length_dependent_on_aspect)">specific catchment area (contour length dependent on aspect)</option>
      <option value="specific_catchment_area_(contour_length_simply_as_cell_size)">specific catchment area (contour length simply as cell size)</option>
    </param>
    <param name="STOP_AT_EDGE" type="select" optional="true" label="Stop at Edge" help="Stop at Edge">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="EROSIVITY" type="float" value="1" optional="true" label="Rill/Interrill Erosivity" help="Rill/Interrill Erosivity"/>
    <param name="STABILITY" type="select" optional="true" label="Stability" help="Stability">
      <option value="instable_(thawing)">instable (thawing)</option>
      <option selected="true" value="stable">stable</option>
    </param>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_STATISTICS" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_STATISTICS" type="select" label="Field Statistics" help="Field Statistics">
        <option value="application/json">json</option>
        <option value="application/vnd.google-earth.kml+xml">vnd.google-earth.kml+xml</option>
        <option value="text/xml">xml</option>
      </param>
      <param name="transmissionMode_STATISTICS" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_UPSLOPE_AREA" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_UPSLOPE_AREA" type="select" label="Upslope Length Factor" help="Upslope Length Factor">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_UPSLOPE_AREA" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_UPSLOPE_LENGTH" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_UPSLOPE_LENGTH" type="select" label="Effective Flow Length" help="Effective Flow Length">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_UPSLOPE_LENGTH" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_UPSLOPE_SLOPE" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_UPSLOPE_SLOPE" type="select" label="Upslope Slope" help="Upslope Slope">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_UPSLOPE_SLOPE" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_LS_FACTOR" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_LS_FACTOR" type="select" label="LS Factor" help="LS Factor">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_LS_FACTOR" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_BALANCE" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_BALANCE" type="select" label="Sediment Balance" help="Sediment Balance">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_BALANCE" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_STATISTICS" format="xml" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_STATISTICS" format="vnd.google-earth.kml+xml" value="application/vnd.google-earth.kml+xml"/>
        <when input="outputType_STATISTICS" format="json" value="application/json"/>
      </change_format>
    </data>
    <data name="output_data_UPSLOPE_AREA" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_UPSLOPE_AREA" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_UPSLOPE_AREA" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_UPSLOPE_AREA" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_UPSLOPE_LENGTH" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_UPSLOPE_LENGTH" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_UPSLOPE_LENGTH" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_UPSLOPE_LENGTH" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_UPSLOPE_SLOPE" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_UPSLOPE_SLOPE" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_UPSLOPE_SLOPE" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_UPSLOPE_SLOPE" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_LS_FACTOR" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_LS_FACTOR" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_LS_FACTOR" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_LS_FACTOR" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_BALANCE" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_BALANCE" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_BALANCE" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_BALANCE" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Calculation of slope length (LS) factor as used for the Universal Soil Loss Equation (USLE), based on slope and (specific) catchment area, latter as substitute for slope length. This tool takes only a Digital Elevation Model (DEM) as input and derives catchment areas according to Freeman (1991). Optionally field polygons can be supplied. Is this the case, calculations will be performed field by field, i.e. catchment area calculation is restricted to each field's area.]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
