<tool name="OTB.ObtainUTMZoneFromGeoPoint" id="otb_obtainutmzonefromgeopoint" version="1.0.0">
  <description>UTM zone determination from a geographic point.</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py output_data_utm $output_data_utm  name OTB.ObtainUTMZoneFromGeoPoint lat $lat
lon $lon
prefer $prefer
response $response
transmissionMode_utm $OutputSection_utm.transmissionMode_utm]]></command>
  <inputs>
    <param name="lat" type="float" optional="false" label="Latitude value of desired point." help="Latitude value of desired point."/>
    <param name="lon" type="float" optional="false" label="Longitude value of desired point." help="Longitude value of desired point."/>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_utm" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="transmissionMode_utm" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_utm" format="txt" label="output_data_utm" hidden="false"/>
  </outputs>
  <tests>
    <test>
      <param name="response" value="document"/>
      <output name="output_data_utm" ftype="txt" value="output_data_utm.txt"/>
    </test>
  </tests>
  <help><![CDATA[This application returns the UTM zone of an input geographic point.]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
