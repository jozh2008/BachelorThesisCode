<tool name="SAGA.grid_calculus.13" id="saga_grid_calculus_13" version="1.0.0">
  <description>Fuzzy Union (OR)</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayGRIDS True  output_data_OR $output_data_OR  name SAGA.grid_calculus.13 GRIDS $GRIDS
TYPE $TYPE
prefer $prefer
response $response
outputType_OR $OutputSection_OR.outputType_OR
transmissionMode_OR $OutputSection_OR.transmissionMode_OR]]></command>
  <inputs>
    <param name="GRIDS" type="data" optional="false" label="Grids" help="Grids The following data types are allowed in the txt file:  x-ogc-envi, tiff, x-ogc-aaigrid, png" format="txt"/>
    <param name="TYPE" type="select" optional="true" label="Operator Type" help="Operator Type">
      <option value="a_+_b_-_a_*_b">a + b - a * b</option>
      <option selected="true" value="max(a,_b)_(non-interactive)">max(a, b) (non-interactive)</option>
      <option value="min(1,_a_+_b)">min(1, a + b)</option>
    </param>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_OR" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_OR" type="select" label="Union" help="Union">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_OR" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_OR" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_OR" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_OR" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_OR" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Calculates the union (max operator) for each grid cell of the selected grids.&lt;br/&gt; e-mail Gianluca Massei: g_massa@libero.it &lt;br/&gt;e-mail Antonio Boggia: boggia@unipg.it &lt;br/&gt;]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
