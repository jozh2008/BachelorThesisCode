<tool name="SAGA.pj_proj4.21" id="saga_pj_proj4_21" version="1.0.0">
  <description>Geographic Distances (Pair of Coordinates)</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayCRS_FILE False  output_data_DISTANCES $output_data_DISTANCES  name SAGA.pj_proj4.21 CRS_METHOD $CRS_METHOD
CRS_PROJ4 '$CRS_PROJ4'
CRS_FILE $CRS_FILE
CRS_EPSG $CRS_EPSG
CRS_EPSG_AUTH '$CRS_EPSG_AUTH'
CRS_EPSG_GEOGCS '$CRS_EPSG_GEOGCS'
CRS_EPSG_PROJCS '$CRS_EPSG_PROJCS'
PRECISE $PRECISE
COORD_X1 $COORD_X1
COORD_Y1 $COORD_Y1
COORD_X2 $COORD_X2
COORD_Y2 $COORD_Y2
EPSILON $EPSILON
prefer $prefer
response $response
outputType_DISTANCES $OutputSection_DISTANCES.outputType_DISTANCES
transmissionMode_DISTANCES $OutputSection_DISTANCES.transmissionMode_DISTANCES]]></command>
  <inputs>
    <param name="CRS_METHOD" type="select" optional="true" label="Get CRS Definition from..." help="Get CRS Definition from...">
      <option value="EPSG_Code">EPSG Code</option>
      <option selected="true" value="Proj4_Parameters">Proj4 Parameters</option>
      <option value="Well_Known_Text_File">Well Known Text File</option>
    </param>
    <param name="CRS_PROJ4" type="text" optional="true" label="Proj4 Parameters" help="Proj4 Parameters"/>
    <param name="CRS_FILE" type="data" optional="false" label="Well Known Text File" help="Well Known Text File The following data types are allowed in the txt file:  plain" format="txt"/>
    <param name="CRS_EPSG" type="integer" value="-1" optional="true" label="Authority Code" help="Authority Code"/>
    <param name="CRS_EPSG_AUTH" type="text" value="EPSG" optional="true" label="Authority" help="Authority"/>
    <param name="CRS_EPSG_GEOGCS" type="text" optional="true" label="Geographic Coordinate Systems" help="Geographic Coordinate Systems"/>
    <param name="CRS_EPSG_PROJCS" type="text" optional="true" label="Projected Coordinate Systems" help="Projected Coordinate Systems"/>
    <param name="PRECISE" type="select" optional="true" label="Precise Datum Conversion" help="avoids precision problems when source and target crs use different geodedtic datums.">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="COORD_X1" type="float" value="10" optional="true" label="X" help="X"/>
    <param name="COORD_Y1" type="float" value="53.5" optional="true" label="Y" help="Y"/>
    <param name="COORD_X2" type="float" value="116.5" optional="true" label="X" help="X"/>
    <param name="COORD_Y2" type="float" value="6.4" optional="true" label="Y" help="Y"/>
    <param name="EPSILON" type="float" value="100" optional="true" label="Epsilon" help="defines the maximum resolution [km] for the re-projected distance segments"/>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_DISTANCES" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_DISTANCES" type="select" label="Geographic Distances" help="Geographic Distances">
        <option value="application/json">json</option>
        <option value="application/vnd.google-earth.kml+xml">vnd.google-earth.kml+xml</option>
        <option value="text/xml">xml</option>
      </param>
      <param name="transmissionMode_DISTANCES" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_DISTANCES" format="xml" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_DISTANCES" format="vnd.google-earth.kml+xml" value="application/vnd.google-earth.kml+xml"/>
        <when input="outputType_DISTANCES" format="json" value="application/json"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Calculates for all segments of the input lines the planar, great elliptic, and loxodrome distance and re-projects the latter two to the projection of the input lines. ]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
