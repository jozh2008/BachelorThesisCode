<tool name="SAGA.grid_tools.34" id="saga_grid_tools_34" version="1.0.0">
  <description>Invert Grid</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayGRID False  output_data_INVERSE $output_data_INVERSE  name SAGA.grid_tools.34 GRID $GRID
prefer $prefer
response $response
outputType_INVERSE $OutputSection_INVERSE.outputType_INVERSE
transmissionMode_INVERSE $OutputSection_INVERSE.transmissionMode_INVERSE]]></command>
  <inputs>
    <param name="GRID" type="data" optional="false" label="Grid" help="Grid The following data types are allowed in the txt file:  x-ogc-envi, png, x-ogc-aaigrid, tiff" format="txt"/>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_INVERSE" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_INVERSE" type="select" label="Inverse Grid" help="Inverse Grid">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_INVERSE" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_INVERSE" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_INVERSE" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_INVERSE" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_INVERSE" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Invert a grid, i.e. the highest value becomes the lowest and vice versa. If the target is not set, the changes will be stored to the original grid. ]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
