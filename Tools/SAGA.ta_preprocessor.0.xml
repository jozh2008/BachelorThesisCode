<tool name="SAGA.ta_preprocessor.0" id="saga_ta_preprocessor_0" version="1.0.0">
  <description>Flat Detection</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayDEM False  output_data_NOFLATS $output_data_NOFLATS  output_data_FLATS $output_data_FLATS  name SAGA.ta_preprocessor.0 DEM $DEM
FLAT_OUTPUT $FLAT_OUTPUT
prefer $prefer
response $response
outputType_NOFLATS $OutputSection_NOFLATS.outputType_NOFLATS
transmissionMode_NOFLATS $OutputSection_NOFLATS.transmissionMode_NOFLATS
outputType_FLATS $OutputSection_FLATS.outputType_FLATS
transmissionMode_FLATS $OutputSection_FLATS.transmissionMode_FLATS]]></command>
  <inputs>
    <param name="DEM" type="data" optional="false" label="DEM" help="DEM The following data types are allowed in the txt file:  png, x-ogc-aaigrid, tiff, x-ogc-envi" format="txt"/>
    <param name="FLAT_OUTPUT" type="select" optional="true" label="Flat Area Values" help="Flat Area Values">
      <option selected="true" value="elevation">elevation</option>
      <option value="enumeration">enumeration</option>
    </param>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_NOFLATS" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_NOFLATS" type="select" label="No Flats" help="No Flats">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_NOFLATS" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_FLATS" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_FLATS" type="select" label="Flat Areas" help="Flat Areas">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_FLATS" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_NOFLATS" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_NOFLATS" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_NOFLATS" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_NOFLATS" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_FLATS" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_FLATS" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_FLATS" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_FLATS" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Flat Detection]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
