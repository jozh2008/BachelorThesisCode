<tool name="SAGA.grid_calculus.12" id="saga_grid_calculus_12" version="1.0.0">
  <description>Fuzzy Intersection (AND)</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayGRIDS True  output_data_AND $output_data_AND  name SAGA.grid_calculus.12 GRIDS $GRIDS
TYPE $TYPE
prefer $prefer
response $response
outputType_AND $OutputSection_AND.outputType_AND
transmissionMode_AND $OutputSection_AND.transmissionMode_AND]]></command>
  <inputs>
    <param name="GRIDS" type="data" optional="false" label="Grids" help="Grids The following data types are allowed in the txt file:  png, x-ogc-aaigrid, x-ogc-envi, tiff" format="txt"/>
    <param name="TYPE" type="select" optional="true" label="Operator Type" help="Operator Type">
      <option value="a_*_b">a * b</option>
      <option value="max(0,_a_+_b_-_1)">max(0, a + b - 1)</option>
      <option selected="true" value="min(a,_b)_(non-interactive)">min(a, b) (non-interactive)</option>
    </param>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_AND" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_AND" type="select" label="Author did not provide help for this parameter... ">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_AND" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_AND" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_AND" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_AND" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_AND" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" ftype="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Calculates the intersection (min operator) for each grid cell of the selected grids.&lt;br/&gt; e-mail Gianluca Massei: g_massa@libero.it &lt;br/&gt;e-mail Antonio Boggia: boggia@unipg.it &lt;br/&gt;]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
