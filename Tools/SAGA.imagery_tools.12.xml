<tool name="SAGA.imagery_tools.12" id="saga_imagery_tools_12" version="1.0.0">
  <description>Local Statistical Measures</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayGRID False  output_data_CONTRAST $output_data_CONTRAST  output_data_ENERGY $output_data_ENERGY  output_data_ENTROPY $output_data_ENTROPY  output_data_VARIANCE $output_data_VARIANCE  name SAGA.imagery_tools.12 GRID $GRID
TYPE $TYPE
RADIUS $RADIUS
NORMALIZE $NORMALIZE
NORM_MIN $NORM_MIN
NORM_MAX $NORM_MAX
prefer $prefer
response $response
outputType_CONTRAST $OutputSection_CONTRAST.outputType_CONTRAST
transmissionMode_CONTRAST $OutputSection_CONTRAST.transmissionMode_CONTRAST
outputType_ENERGY $OutputSection_ENERGY.outputType_ENERGY
transmissionMode_ENERGY $OutputSection_ENERGY.transmissionMode_ENERGY
outputType_ENTROPY $OutputSection_ENTROPY.outputType_ENTROPY
transmissionMode_ENTROPY $OutputSection_ENTROPY.transmissionMode_ENTROPY
outputType_VARIANCE $OutputSection_VARIANCE.outputType_VARIANCE
transmissionMode_VARIANCE $OutputSection_VARIANCE.transmissionMode_VARIANCE]]></command>
  <inputs>
    <param name="GRID" type="data" optional="false" label="Grid" help="Grid The following data types are allowed in the txt file:  tiff, x-ogc-aaigrid, png, x-ogc-envi" format="txt"/>
    <param name="TYPE" type="select" optional="true" label="Kernel" help="kernel radius in cells">
      <option selected="true" value="circle">circle</option>
      <option value="square">square</option>
    </param>
    <param name="RADIUS" type="integer" value="1" optional="true" label="Radius" help="kernel radius in cells"/>
    <param name="NORMALIZE" type="select" optional="true" label="Normalization" help="Normalization">
      <option value="no">no</option>
      <option selected="true" value="scale_to_range">scale to range</option>
    </param>
    <param name="NORM_MIN" type="float" value="1" optional="true" label="Minimum" help="Minimum"/>
    <param name="NORM_MAX" type="float" value="255" optional="true" label="Maximum" help="Maximum"/>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_CONTRAST" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_CONTRAST" type="select" label="Author did not provide help for this parameter... ">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_CONTRAST" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_ENERGY" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_ENERGY" type="select" label="Author did not provide help for this parameter... ">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_ENERGY" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_ENTROPY" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_ENTROPY" type="select" label="Author did not provide help for this parameter... ">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_ENTROPY" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_VARIANCE" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_VARIANCE" type="select" label="Author did not provide help for this parameter... ">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_VARIANCE" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_CONTRAST" format="tiff" label="output_data_CONTRAST" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_CONTRAST" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_CONTRAST" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_CONTRAST" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_ENERGY" format="tiff" label="output_data_ENERGY" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_ENERGY" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_ENERGY" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_ENERGY" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_ENTROPY" format="tiff" label="output_data_ENTROPY" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_ENTROPY" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_ENTROPY" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_ENTROPY" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_VARIANCE" format="tiff" label="output_data_VARIANCE" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_VARIANCE" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_VARIANCE" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_VARIANCE" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <param name="response" value="document"/>
      <output name="output_data_CONTRAST" ftype="txt" value="output_data_CONTRAST.txt"/>
      <output name="output_data_ENERGY" ftype="txt" value="output_data_ENERGY.txt"/>
      <output name="output_data_ENTROPY" ftype="txt" value="output_data_ENTROPY.txt"/>
      <output name="output_data_VARIANCE" ftype="txt" value="output_data_VARIANCE.txt"/>
    </test>
  </tests>
  <help><![CDATA[&lt;hr&gt;&lt;h4&gt;References&lt;/h4&gt;&lt;ul&gt;&lt;li&gt;&lt;b&gt;Zhang, Y. (2001):&lt;/b&gt; Texture-integrated classification of urban treed areas in high-resolution color-infrared imagery. Photogrammetric Engineering and Remote Sensing 67(12), 1359-1365. &lt;a href="http://web.pdx.edu/~nauna/2001_dec_1359-1365.pdf"&gt;online&lt;/a&gt;.&lt;/li&gt;&lt;/ul&gt;]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
