<tool name="SAGA.garden_learn_to_program.4" id="saga_garden_learn_to_program_4" version="1.0.0">
  <description>05: Direct neighbours - slope and aspect</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayELEVATION False  output_data_SLOPE $output_data_SLOPE  output_data_ASPECT $output_data_ASPECT  name SAGA.garden_learn_to_program.4 ELEVATION $ELEVATION
METHOD $METHOD
prefer $prefer
response $response
outputType_SLOPE $OutputSection_SLOPE.outputType_SLOPE
transmissionMode_SLOPE $OutputSection_SLOPE.transmissionMode_SLOPE
outputType_ASPECT $OutputSection_ASPECT.outputType_ASPECT
transmissionMode_ASPECT $OutputSection_ASPECT.transmissionMode_ASPECT]]></command>
  <inputs>
    <param name="ELEVATION" type="data" optional="false" label="Input grid" help="This must be your input data of type grid. The following data types are allowed in the txt file:  tiff, x-ogc-aaigrid, png, x-ogc-envi" format="txt"/>
    <param name="METHOD" type="select" optional="true" label="Method" help="Choose a method">
      <option selected="true" value="Steepest_gradient_(first_version)">Steepest gradient (first version)</option>
      <option value="Steepest_gradient_(second_version)">Steepest gradient (second version)</option>
      <option value="Zevenbergen_&amp;_Thorne">Zevenbergen &amp; Thorne</option>
    </param>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_SLOPE" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_SLOPE" type="select" label="Author did not provide help for this parameter... ">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_SLOPE" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_ASPECT" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_ASPECT" type="select" label="Author did not provide help for this parameter... ">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_ASPECT" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_SLOPE" format="tiff" label="output_data_SLOPE" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_SLOPE" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_SLOPE" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_SLOPE" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_ASPECT" format="tiff" label="output_data_ASPECT" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_ASPECT" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_ASPECT" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_ASPECT" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <param name="response" value="document"/>
      <output name="output_data_SLOPE" ftype="txt" value="output_data_SLOPE.txt"/>
      <output name="output_data_ASPECT" ftype="txt" value="output_data_ASPECT.txt"/>
    </test>
  </tests>
  <help><![CDATA[Simple neighbourhood analysis for grid cells.&lt;br/&gt;- Zevenbergen, L.W. / Thorne, C.R. (1987):&lt;br/&gt;    'Quantitative analysis of land surface topography',&lt;br/&gt;    Earth Surface Processes and Landforms, 12: 47-56.&lt;br/&gt;&lt;br/&gt;(c) 2003 by Olaf Conrad, Goettingen&lt;br/&gt;email: oconrad@gwdg.de]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
