<tool name="SAGA.ta_morphometry.3" id="saga_ta_morphometry_3" version="1.0.0">
  <description>Surface Specific Points</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayELEVATION False  output_data_RESULT $output_data_RESULT  name SAGA.ta_morphometry.3 ELEVATION $ELEVATION
METHOD $METHOD
THRESHOLD $THRESHOLD
prefer $prefer
response $response
outputType_RESULT $OutputSection_RESULT.outputType_RESULT
transmissionMode_RESULT $OutputSection_RESULT.transmissionMode_RESULT]]></command>
  <inputs>
    <param name="ELEVATION" type="data" optional="false" label="Elevation" help="Elevation The following data types are allowed in the txt file:  x-ogc-envi, x-ogc-aaigrid, tiff, png" format="txt"/>
    <param name="METHOD" type="select" optional="true" label="Method" help="Algorithm for the detection of Surface Specific Points">
      <option value="Flow_Direction">Flow Direction</option>
      <option value="Flow_Direction_(up_and_down)">Flow Direction (up and down)</option>
      <option value="Mark_Highest_Neighbour">Mark Highest Neighbour</option>
      <option selected="true" value="Opposite_Neighbours">Opposite Neighbours</option>
      <option value="Peucker_&amp;_Douglas">Peucker &amp; Douglas</option>
    </param>
    <param name="THRESHOLD" type="float" value="2" optional="true" label="Threshold" help="Threshold for Peucker &amp; Douglas Algorithm"/>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_RESULT" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_RESULT" type="select" label="Result" help="Result">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_RESULT" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_RESULT" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_RESULT" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_RESULT" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_RESULT" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[References:&lt;br/&gt;Peucker, T.K. and Douglas, D.H., 1975:&lt;br/&gt;'Detection of surface-specific points by local parallel processing of discrete terrain elevation data',&lt;br/&gt;Computer Graphics and Image Processing, 4, 375-387&lt;br/&gt;]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
