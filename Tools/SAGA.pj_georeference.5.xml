<tool name="SAGA.pj_georeference.5" id="saga_pj_georeference_5" version="1.0.0">
  <description>Define Georeference for Grids</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayGRIDS True  output_data_REFERENCED $output_data_REFERENCED  name SAGA.pj_georeference.5 GRIDS $GRIDS
DEFINITION $DEFINITION
SIZE $SIZE
XMIN $XMIN
XMAX $XMAX
YMIN $YMIN
YMAX $YMAX
CELL_REF $CELL_REF
prefer $prefer
response $response
outputType_REFERENCED $OutputSection_REFERENCED.outputType_REFERENCED
transmissionMode_REFERENCED $OutputSection_REFERENCED.transmissionMode_REFERENCED]]></command>
  <inputs>
    <param name="GRIDS" type="data" optional="false" label="Grids" help="Grids The following data types are allowed in the txt file:  x-ogc-envi, x-ogc-aaigrid, tiff, png" format="txt"/>
    <param name="DEFINITION" type="select" optional="true" label="Definition" help="Definition">
      <option selected="true" value="cellsize_and_lower_left_cell_coordinates">cellsize and lower left cell coordinates</option>
      <option value="cellsize_and_upper_left_cell_coordinates">cellsize and upper left cell coordinates</option>
      <option value="lower_left_cell_coordinates_and_left_to_right_range">lower left cell coordinates and left to right range</option>
      <option value="lower_left_cell_coordinates_and_lower_to_upper_range">lower left cell coordinates and lower to upper range</option>
    </param>
    <param name="SIZE" type="float" value="1" optional="true" label="Cellsize" help="Cellsize"/>
    <param name="XMIN" type="float" value="0" optional="true" label="Left" help="Left"/>
    <param name="XMAX" type="float" value="0" optional="true" label="Right" help="Right"/>
    <param name="YMIN" type="float" value="0" optional="true" label="Lower" help="Lower"/>
    <param name="YMAX" type="float" value="0" optional="true" label="Upper" help="Upper"/>
    <param name="CELL_REF" type="select" optional="true" label="Cell Reference" help="Cell Reference">
      <option selected="true" value="center">center</option>
      <option value="corner">corner</option>
    </param>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_REFERENCED" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_REFERENCED" type="select" label="Referenced Grids" help="Referenced Grids">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_REFERENCED" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_REFERENCED" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_REFERENCED" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_REFERENCED" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_REFERENCED" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[This tool simply allows definition of grid's cellsize and position. It does not perform any kind of warping but might be helpful, if the grid has lost this information or is already aligned with the coordinate system. ]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
