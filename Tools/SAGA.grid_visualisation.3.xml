<tool name="SAGA.grid_visualisation.3" id="saga_grid_visualisation_3" version="1.0.0">
  <description>RGB Composite</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayR_GRID False  isArrayG_GRID False  isArrayB_GRID False  isArrayA_GRID False  output_data_RGB $output_data_RGB  name SAGA.grid_visualisation.3 R_GRID $R_GRID
R_METHOD $R_METHOD
R_RANGE_MIN $R_RANGE_MIN
R_RANGE_MAX $R_RANGE_MAX
R_PERCTL_MIN $R_PERCTL_MIN
R_PERCTL_MAX $R_PERCTL_MAX
R_STDDEV $R_STDDEV
G_GRID $G_GRID
G_METHOD $G_METHOD
G_RANGE_MIN $G_RANGE_MIN
G_RANGE_MAX $G_RANGE_MAX
G_PERCTL_MIN $G_PERCTL_MIN
G_PERCTL_MAX $G_PERCTL_MAX
G_STDDEV $G_STDDEV
B_GRID $B_GRID
B_METHOD $B_METHOD
B_RANGE_MIN $B_RANGE_MIN
B_RANGE_MAX $B_RANGE_MAX
B_PERCTL_MIN $B_PERCTL_MIN
B_PERCTL_MAX $B_PERCTL_MAX
B_STDDEV $B_STDDEV
A_GRID $A_GRID
A_METHOD $A_METHOD
A_RANGE_MIN $A_RANGE_MIN
A_RANGE_MAX $A_RANGE_MAX
A_PERCTL_MIN $A_PERCTL_MIN
A_PERCTL_MAX $A_PERCTL_MAX
A_STDDEV $A_STDDEV
prefer $prefer
response $response
outputType_RGB $OutputSection_RGB.outputType_RGB
transmissionMode_RGB $OutputSection_RGB.transmissionMode_RGB]]></command>
  <inputs>
    <param name="R_GRID" type="data" optional="false" label="Red" help="Red The following data types are allowed in the txt file:  png, x-ogc-aaigrid, x-ogc-envi, tiff" format="txt"/>
    <param name="R_METHOD" type="select" optional="true" label="Value Preparation" help="Value Preparation">
      <option value="percentiles">percentiles</option>
      <option value="rescale_to_0_-_255">rescale to 0 - 255</option>
      <option selected="true" value="standard_deviation">standard deviation</option>
      <option value="take_original_value_(0_-_255)">take original value (0 - 255)</option>
      <option value="user_defined">user defined</option>
    </param>
    <param name="R_RANGE_MIN" type="float" optional="true" label="Rescale Range (min value)" help="Rescale Range"/>
    <param name="R_RANGE_MAX" type="float" optional="true" label="Rescale Range (max value)" help="Rescale Range"/>
    <param name="R_PERCTL_MIN" type="float" optional="true" label="Percentiles (min value)" help="Percentiles"/>
    <param name="R_PERCTL_MAX" type="float" optional="true" label="Percentiles (max value)" help="Percentiles"/>
    <param name="R_STDDEV" type="float" value="2" optional="true" label="Standard Deviation" help="Standard Deviation"/>
    <param name="G_GRID" type="data" optional="false" label="Green" help="Green The following data types are allowed in the txt file:  png, x-ogc-aaigrid, x-ogc-envi, tiff" format="txt"/>
    <param name="G_METHOD" type="select" optional="true" label="Value Preparation" help="Value Preparation">
      <option value="percentiles">percentiles</option>
      <option value="rescale_to_0_-_255">rescale to 0 - 255</option>
      <option selected="true" value="standard_deviation">standard deviation</option>
      <option value="take_original_value_(0_-_255)">take original value (0 - 255)</option>
      <option value="user_defined">user defined</option>
    </param>
    <param name="G_RANGE_MIN" type="float" optional="true" label="Rescale Range (min value)" help="Rescale Range"/>
    <param name="G_RANGE_MAX" type="float" optional="true" label="Rescale Range (max value)" help="Rescale Range"/>
    <param name="G_PERCTL_MIN" type="float" optional="true" label="Percentiles (min value)" help="Percentiles"/>
    <param name="G_PERCTL_MAX" type="float" optional="true" label="Percentiles (max value)" help="Percentiles"/>
    <param name="G_STDDEV" type="float" value="2" optional="true" label="Standard Deviation" help="Standard Deviation"/>
    <param name="B_GRID" type="data" optional="false" label="Blue" help="Blue The following data types are allowed in the txt file:  png, x-ogc-aaigrid, x-ogc-envi, tiff" format="txt"/>
    <param name="B_METHOD" type="select" optional="true" label="Value Preparation" help="Value Preparation">
      <option value="percentiles">percentiles</option>
      <option value="rescale_to_0_-_255">rescale to 0 - 255</option>
      <option selected="true" value="standard_deviation">standard deviation</option>
      <option value="take_original_value_(0_-_255)">take original value (0 - 255)</option>
      <option value="user_defined">user defined</option>
    </param>
    <param name="B_RANGE_MIN" type="float" optional="true" label="Rescale Range (min value)" help="Rescale Range"/>
    <param name="B_RANGE_MAX" type="float" optional="true" label="Rescale Range (max value)" help="Rescale Range"/>
    <param name="B_PERCTL_MIN" type="float" optional="true" label="Percentiles (min value)" help="Percentiles"/>
    <param name="B_PERCTL_MAX" type="float" optional="true" label="Percentiles (max value)" help="Percentiles"/>
    <param name="B_STDDEV" type="float" value="2" optional="true" label="Standard Deviation" help="Standard Deviation"/>
    <param name="A_GRID" type="data" optional="false" label="Alpha" help="Alpha The following data types are allowed in the txt file:  png, x-ogc-aaigrid, x-ogc-envi, tiff" format="txt"/>
    <param name="A_METHOD" type="select" optional="true" label="Value Preparation" help="Value Preparation">
      <option value="percentiles">percentiles</option>
      <option value="rescale_to_0_-_255">rescale to 0 - 255</option>
      <option selected="true" value="standard_deviation">standard deviation</option>
      <option value="take_original_value_(0_-_255)">take original value (0 - 255)</option>
      <option value="user_defined">user defined</option>
    </param>
    <param name="A_RANGE_MIN" type="float" optional="true" label="Rescale Range (min value)" help="Rescale Range"/>
    <param name="A_RANGE_MAX" type="float" optional="true" label="Rescale Range (max value)" help="Rescale Range"/>
    <param name="A_PERCTL_MIN" type="float" optional="true" label="Percentiles (min value)" help="Percentiles"/>
    <param name="A_PERCTL_MAX" type="float" optional="true" label="Percentiles (max value)" help="Percentiles"/>
    <param name="A_STDDEV" type="float" value="2" optional="true" label="Standard Deviation" help="Standard Deviation"/>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_RGB" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_RGB" type="select" label="Composite" help="Composite">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_RGB" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_RGB" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_RGB" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_RGB" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_RGB" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Create red-green-blue overlays of grids. ]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
