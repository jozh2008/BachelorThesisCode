<tool name="SAGA.imagery_tools.4" id="saga_imagery_tools_4" version="1.0.0">
  <description>IHS Sharpening</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayR False  isArrayG False  isArrayB False  isArrayPAN False  output_data_R_SHARP $output_data_R_SHARP  output_data_G_SHARP $output_data_G_SHARP  output_data_B_SHARP $output_data_B_SHARP  output_data_SHARPEN $output_data_SHARPEN  name SAGA.imagery_tools.4 R $R
G $G
B $B
PAN $PAN
RESAMPLING $RESAMPLING
PAN_MATCH $PAN_MATCH
prefer $prefer
response $response
outputType_R_SHARP $OutputSection_R_SHARP.outputType_R_SHARP
transmissionMode_R_SHARP $OutputSection_R_SHARP.transmissionMode_R_SHARP
outputType_G_SHARP $OutputSection_G_SHARP.outputType_G_SHARP
transmissionMode_G_SHARP $OutputSection_G_SHARP.transmissionMode_G_SHARP
outputType_B_SHARP $OutputSection_B_SHARP.outputType_B_SHARP
transmissionMode_B_SHARP $OutputSection_B_SHARP.transmissionMode_B_SHARP
outputType_SHARPEN $OutputSection_SHARPEN.outputType_SHARPEN
transmissionMode_SHARPEN $OutputSection_SHARPEN.transmissionMode_SHARPEN]]></command>
  <inputs>
    <param name="R" type="data" optional="false" label="Red" help="Red The following data types are allowed in the txt file:  x-ogc-aaigrid, tiff, png, x-ogc-envi" format="txt"/>
    <param name="G" type="data" optional="false" label="Green" help="Green The following data types are allowed in the txt file:  x-ogc-aaigrid, tiff, png, x-ogc-envi" format="txt"/>
    <param name="B" type="data" optional="false" label="Blue" help="Blue The following data types are allowed in the txt file:  x-ogc-aaigrid, tiff, png, x-ogc-envi" format="txt"/>
    <param name="PAN" type="data" optional="false" label="Panchromatic Channel" help="Panchromatic Channel The following data types are allowed in the txt file:  x-ogc-aaigrid, tiff, png, x-ogc-envi" format="txt"/>
    <param name="RESAMPLING" type="select" optional="true" label="Resampling" help="Resampling">
      <option value="bilinear">bilinear</option>
      <option selected="true" value="cubic_convolution">cubic convolution</option>
      <option value="nearest_neighbour">nearest neighbour</option>
    </param>
    <param name="PAN_MATCH" type="select" optional="true" label="Panchromatic Channel Matching" help="Panchromatic Channel Matching">
      <option selected="true" value="normalized">normalized</option>
      <option value="standardized">standardized</option>
    </param>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_R_SHARP" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_R_SHARP" type="select" label="Red" help="Red">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_R_SHARP" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_G_SHARP" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_G_SHARP" type="select" label="Green" help="Green">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_G_SHARP" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_B_SHARP" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_B_SHARP" type="select" label="Blue" help="Blue">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_B_SHARP" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_SHARPEN" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_SHARPEN" type="select" label="Sharpened Channels" help="Sharpened Channels">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_SHARPEN" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_R_SHARP" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_R_SHARP" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_R_SHARP" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_R_SHARP" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_G_SHARP" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_G_SHARP" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_G_SHARP" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_G_SHARP" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_B_SHARP" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_B_SHARP" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_B_SHARP" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_B_SHARP" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_SHARPEN" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_SHARPEN" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_SHARPEN" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_SHARPEN" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Intensity, hue, saturation (IHS) sharpening.]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
