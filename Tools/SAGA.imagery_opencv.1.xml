<tool name="SAGA.imagery_opencv.1" id="saga_imagery_opencv_1" version="1.0.0">
  <description>Fourier Transformation (OpenCV)</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayINPUT False  output_data_REAL $output_data_REAL  output_data_IMAG $output_data_IMAG  name SAGA.imagery_opencv.1 INPUT $INPUT
prefer $prefer
response $response
outputType_REAL $OutputSection_REAL.outputType_REAL
transmissionMode_REAL $OutputSection_REAL.transmissionMode_REAL
outputType_IMAG $OutputSection_IMAG.outputType_IMAG
transmissionMode_IMAG $OutputSection_IMAG.transmissionMode_IMAG]]></command>
  <inputs>
    <param name="INPUT" type="data" optional="false" label="Input" help="Input The following data types are allowed in the txt file:  png, x-ogc-aaigrid, tiff, x-ogc-envi" format="txt"/>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_REAL" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_REAL" type="select" label="Fourier Transformation (Real)" help="Fourier Transformation (Real)">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_REAL" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_IMAG" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_IMAG" type="select" label="Fourier Transformation (Imaginary)" help="Fourier Transformation (Imaginary)">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_IMAG" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_REAL" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_REAL" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_REAL" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_REAL" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_IMAG" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_IMAG" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_IMAG" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_IMAG" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[References:&lt;br/&gt;OpenCV - Open Source Computer Vision&lt;br/&gt;&lt;a target="_blank" href="http://opencv.willowgarage.com"&gt;http://opencv.willowgarage.com&lt;/a&gt;]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
