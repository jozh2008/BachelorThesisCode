<tool name="SAGA.grid_calculus.7" id="saga_grid_calculus_7" version="1.0.0">
  <description>Random Field</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayTEMPLATE False  output_data_OUT_GRID $output_data_OUT_GRID  name SAGA.grid_calculus.7 DEFINITION $DEFINITION
USER_SIZE $USER_SIZE
USER_XMIN $USER_XMIN
USER_XMAX $USER_XMAX
USER_YMIN $USER_YMIN
USER_YMAX $USER_YMAX
USER_COLS $USER_COLS
USER_ROWS $USER_ROWS
USER_FITS $USER_FITS
TEMPLATE $TEMPLATE
METHOD $METHOD
RANGE_MIN $RANGE_MIN
RANGE_MAX $RANGE_MAX
MEAN $MEAN
STDDEV $STDDEV
prefer $prefer
response $response
outputType_OUT_GRID $OutputSection_OUT_GRID.outputType_OUT_GRID
transmissionMode_OUT_GRID $OutputSection_OUT_GRID.transmissionMode_OUT_GRID]]></command>
  <inputs>
    <param name="DEFINITION" type="select" optional="true" label="Target Grid System" help="Target Grid System">
      <option value="grid_or_grid_system">grid or grid system</option>
      <option selected="true" value="user_defined">user defined</option>
    </param>
    <param name="USER_SIZE" type="float" value="1" optional="true" label="Cellsize" help="Cellsize"/>
    <param name="USER_XMIN" type="float" value="0" optional="true" label="West" help="West"/>
    <param name="USER_XMAX" type="float" value="100" optional="true" label="East" help="East"/>
    <param name="USER_YMIN" type="float" value="0" optional="true" label="South" help="South"/>
    <param name="USER_YMAX" type="float" value="100" optional="true" label="North" help="North"/>
    <param name="USER_COLS" type="integer" value="100" optional="true" label="Columns" help="Number of cells in East-West direction."/>
    <param name="USER_ROWS" type="integer" value="100" optional="true" label="Rows" help="Number of cells in North-South direction."/>
    <param name="USER_FITS" type="select" optional="true" label="Fit" help="Fit">
      <option value="cells">cells</option>
      <option selected="true" value="nodes">nodes</option>
    </param>
    <param name="TEMPLATE" type="data" optional="false" label="Target System" help="use this grid's system for output grids The following data types are allowed in the txt file:  x-ogc-aaigrid, png, tiff, x-ogc-envi" format="txt"/>
    <param name="METHOD" type="select" optional="true" label="Method" help="Method">
      <option selected="true" value="Gaussian">Gaussian</option>
      <option value="Uniform">Uniform</option>
    </param>
    <param name="RANGE_MIN" type="float" optional="true" label="Range (min value)" help="Range"/>
    <param name="RANGE_MAX" type="float" optional="true" label="Range (max value)" help="Range"/>
    <param name="MEAN" type="float" value="0" optional="true" label="Arithmetic Mean" help="Arithmetic Mean"/>
    <param name="STDDEV" type="float" value="1" optional="true" label="Standard Deviation" help="Standard Deviation"/>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_OUT_GRID" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_OUT_GRID" type="select" label="Random Field" help="Random Field">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_OUT_GRID" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_OUT_GRID" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_OUT_GRID" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_OUT_GRID" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_OUT_GRID" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Create a grid with pseudo-random numbers as grid cell values. ]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
