  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayRED False  isArrayNIR False  output_data_PVI0 $output_data_PVI0  output_data_PVI1 $output_data_PVI1  output_data_PVI2 $output_data_PVI2  output_data_PVI3 $output_data_PVI3  output_data_TSAVI $output_data_TSAVI  output_data_ATSAVI $output_data_ATSAVI  name SAGA.imagery_tools.0 RED $RED
NIR $NIR
INTERCEPT $INTERCEPT
SLOPE $SLOPE
prefer $prefer
response $response
outputType_PVI0 $OutputSection_PVI0.outputType_PVI0
transmissionMode_PVI0 $OutputSection_PVI0.transmissionMode_PVI0
outputType_PVI1 $OutputSection_PVI1.outputType_PVI1
