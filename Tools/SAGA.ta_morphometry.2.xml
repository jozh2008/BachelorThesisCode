<tool name="SAGA.ta_morphometry.2" id="saga_ta_morphometry_2" version="1.0.0">
  <description>Convergence Index (Search Radius)</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayELEVATION False  output_data_CONVERGENCE $output_data_CONVERGENCE  name SAGA.ta_morphometry.2 ELEVATION $ELEVATION
RADIUS $RADIUS
SLOPE $SLOPE
DIFFERENCE $DIFFERENCE
prefer $prefer
response $response
outputType_CONVERGENCE $OutputSection_CONVERGENCE.outputType_CONVERGENCE
transmissionMode_CONVERGENCE $OutputSection_CONVERGENCE.transmissionMode_CONVERGENCE]]></command>
  <inputs>
    <param name="ELEVATION" type="data" optional="false" label="Elevation" help="Elevation The following data types are allowed in the txt file:  x-ogc-aaigrid, x-ogc-envi, tiff, png" format="txt"/>
    <param name="RADIUS" type="float" value="10" optional="true" label="Radius [Cells]" help="Radius [Cells]"/>
    <param name="SLOPE" type="select" optional="true" label="Gradient" help="Gradient">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="DIFFERENCE" type="select" optional="true" label="Difference" help="Difference">
      <option value="center_cell's_aspect_direction">center cell's aspect direction</option>
      <option selected="true" value="direction_to_the_center_cell">direction to the center cell</option>
    </param>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_CONVERGENCE" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_CONVERGENCE" type="select" label="Convergence Index" help="Convergence Index">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_CONVERGENCE" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_CONVERGENCE" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_CONVERGENCE" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_CONVERGENCE" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_CONVERGENCE" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Reference:&lt;br/&gt;Koethe, R. & Lehmeier, F. (1996): SARA - System zur Automatischen Relief-Analyse. User Manual, 2. Edition [Dept. of Geography, University of Goettingen, unpublished]&lt;br/&gt;&lt;br/&gt;]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
