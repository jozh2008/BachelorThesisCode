<tool name="SAGA.shapes_polygons.4" id="saga_shapes_polygons_4" version="1.0.0">
  <description>Point Statistics for Polygons</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayPOINTS False  isArrayFIELDS False  isArrayPOLYGONS False  output_data_STATISTICS $output_data_STATISTICS  name SAGA.shapes_polygons.4 POINTS $POINTS
FIELDS $FIELDS
POLYGONS $POLYGONS
SUM $SUM
AVG $AVG
VAR $VAR
DEV $DEV
MIN $MIN
MAX $MAX
NUM $NUM
FIELD_NAME $FIELD_NAME
prefer $prefer
response $response
outputType_STATISTICS $OutputSection_STATISTICS.outputType_STATISTICS
transmissionMode_STATISTICS $OutputSection_STATISTICS.transmissionMode_STATISTICS]]></command>
  <inputs>
    <param name="POINTS" type="data" optional="false" label="Points" help="Points The following data types are allowed in the txt file:  vnd.google-earth.kml+xml, json, xml" format="txt"/>
    <param name="FIELDS" type="data" optional="false" label="Attributes" help="Attributes The following data types are allowed in the txt file:  csv" format="txt"/>
    <param name="POLYGONS" type="data" optional="false" label="Polygons" help="Polygons The following data types are allowed in the txt file:  vnd.google-earth.kml+xml, json, xml" format="txt"/>
    <param name="SUM" type="select" optional="true" label="Sum" help="Sum">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="AVG" type="select" optional="true" label="Mean" help="Mean">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="VAR" type="select" optional="true" label="Variance" help="Variance">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="DEV" type="select" optional="true" label="Deviation" help="Deviation">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="MIN" type="select" optional="true" label="Minimum" help="Minimum">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="MAX" type="select" optional="true" label="Maximum" help="Maximum">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="NUM" type="select" optional="true" label="Count" help="Count">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="FIELD_NAME" type="select" optional="true" label="Field Naming" help="Field Naming">
      <option value="original_name">original name</option>
      <option value="original_name_+_variable_type">original name + variable type</option>
      <option value="variable_type">variable type</option>
      <option selected="true" value="variable_type_+_original_name">variable type + original name</option>
    </param>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_STATISTICS" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_STATISTICS" type="select" label="Author did not provide help for this parameter... ">
        <option value="application/json">json</option>
        <option value="application/vnd.google-earth.kml+xml">vnd.google-earth.kml+xml</option>
        <option value="text/xml">xml</option>
      </param>
      <param name="transmissionMode_STATISTICS" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_STATISTICS" format="xml" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_STATISTICS" format="vnd.google-earth.kml+xml" value="application/vnd.google-earth.kml+xml"/>
        <when input="outputType_STATISTICS" format="json" value="application/json"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" ftype="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Calculates statistics over all points falling in a polygon.]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
