<tool name="SAGA.statistics_grid.17" id="saga_statistics_grid_17" version="1.0.0">
  <description>Build Statistics for Grids</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayGRIDS True  output_data_COUNT $output_data_COUNT  output_data_SUM $output_data_SUM  output_data_SUM2 $output_data_SUM2  output_data_MIN $output_data_MIN  output_data_MAX $output_data_MAX  output_data_HISTOGRAM $output_data_HISTOGRAM  name SAGA.statistics_grid.17 GRIDS $GRIDS
HCLASSES $HCLASSES
HMIN $HMIN
HMAX $HMAX
RESET $RESET
prefer $prefer
response $response
outputType_COUNT $OutputSection_COUNT.outputType_COUNT
transmissionMode_COUNT $OutputSection_COUNT.transmissionMode_COUNT
outputType_SUM $OutputSection_SUM.outputType_SUM
transmissionMode_SUM $OutputSection_SUM.transmissionMode_SUM
outputType_SUM2 $OutputSection_SUM2.outputType_SUM2
transmissionMode_SUM2 $OutputSection_SUM2.transmissionMode_SUM2
outputType_MIN $OutputSection_MIN.outputType_MIN
transmissionMode_MIN $OutputSection_MIN.transmissionMode_MIN
outputType_MAX $OutputSection_MAX.outputType_MAX
transmissionMode_MAX $OutputSection_MAX.transmissionMode_MAX
outputType_HISTOGRAM $OutputSection_HISTOGRAM.outputType_HISTOGRAM
transmissionMode_HISTOGRAM $OutputSection_HISTOGRAM.transmissionMode_HISTOGRAM]]></command>
  <inputs>
    <param name="GRIDS" type="data" optional="false" label="Grids" help="Grids The following data types are allowed in the txt file:  tiff, png, x-ogc-aaigrid, x-ogc-envi" format="txt"/>
    <param name="HCLASSES" type="integer" value="20" optional="true" label="Number of Classes" help="Number of Classes"/>
    <param name="HMIN" type="float" value="0" optional="true" label="Minimum" help="Minimum"/>
    <param name="HMAX" type="float" value="0" optional="true" label="Minimum" help="Minimum"/>
    <param name="RESET" type="select" optional="true" label="Reset" help="Reset">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_COUNT" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_COUNT" type="select" label="Number of Values" help="Number of Values">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_COUNT" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_SUM" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_SUM" type="select" label="Sum" help="Sum">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_SUM" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_SUM2" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_SUM2" type="select" label="Sum of Squares" help="Sum of Squares">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_SUM2" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_MIN" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_MIN" type="select" label="Minimum" help="Minimum">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_MIN" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_MAX" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_MAX" type="select" label="Maximum" help="Maximum">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_MAX" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_HISTOGRAM" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_HISTOGRAM" type="select" label="Histogram" help="Histogram">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_HISTOGRAM" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_COUNT" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_COUNT" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_COUNT" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_COUNT" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_SUM" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_SUM" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_SUM" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_SUM" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_SUM2" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_SUM2" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_SUM2" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_SUM2" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_MIN" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_MIN" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_MIN" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_MIN" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_MAX" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_MAX" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_MAX" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_MAX" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_HISTOGRAM" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_HISTOGRAM" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_HISTOGRAM" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_HISTOGRAM" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[This tool collects cell-wise basic statistical information from the given input grids. The collected statistics can be used as input for the 'Evaluate Statistics for Grids' tool. You can use this tool with the 'Reset' flag set to false (not available in command line mode) or the 'Add Statistics for Grids' tool to successively add statistical information from further grids by subsequent calls. These three tools (build, add, evaluate) have been designed to inspect a large number of grids that could otherwise not be evaluated simultaneously due to memory restrictions. ]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
