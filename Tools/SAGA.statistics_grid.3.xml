<tool name="SAGA.statistics_grid.3" id="saga_statistics_grid_3" version="1.0.0">
  <description>Radius of Variance (Grid)</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayINPUT False  output_data_RESULT $output_data_RESULT  name SAGA.statistics_grid.3 INPUT $INPUT
STDDEV $STDDEV
RADIUS $RADIUS
OUTPUT $OUTPUT
prefer $prefer
response $response
outputType_RESULT $OutputSection_RESULT.outputType_RESULT
transmissionMode_RESULT $OutputSection_RESULT.transmissionMode_RESULT]]></command>
  <inputs>
    <param name="INPUT" type="data" optional="false" label="Grid" help="Grid The following data types are allowed in the txt file:  x-ogc-envi, x-ogc-aaigrid, tiff, png" format="txt"/>
    <param name="STDDEV" type="float" value="1" optional="true" label="Standard Deviation" help="Standard Deviation"/>
    <param name="RADIUS" type="integer" value="20" optional="true" label="Maximum Search Radius (cells)" help="Maximum Search Radius (cells)"/>
    <param name="OUTPUT" type="select" optional="true" label="Type of Output" help="Type of Output">
      <option selected="true" value="Cells">Cells</option>
      <option value="Map_Units">Map Units</option>
    </param>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_RESULT" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_RESULT" type="select" label="Radius" help="Radius">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_RESULT" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_RESULT" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_RESULT" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_RESULT" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_RESULT" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Find the radius within which the cell values exceed the given variance criterium. This tool is closely related to the representativeness calculation (variance within given search radius). For easier usage, the variance criterium is entered as standard deviation value. ]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
