<tool name="SAGA.shapes_points.5" id="saga_shapes_points_5" version="1.0.0">
  <description>Convert Lines to Points</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayLINES False  output_data_POINTS $output_data_POINTS  name SAGA.shapes_points.5 LINES $LINES
ADD $ADD
METHOD_INSERT $METHOD_INSERT
DIST $DIST
ADD_POINT_ORDER $ADD_POINT_ORDER
prefer $prefer
response $response
outputType_POINTS $OutputSection_POINTS.outputType_POINTS
transmissionMode_POINTS $OutputSection_POINTS.transmissionMode_POINTS]]></command>
  <inputs>
    <param name="LINES" type="data" optional="false" label="Lines" help="Lines The following data types are allowed in the txt file:  json, xml, vnd.google-earth.kml+xml" format="txt"/>
    <param name="ADD" type="select" optional="true" label="Insert Additional Points" help="Insert Additional Points">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="METHOD_INSERT" type="select" optional="true" label="Insertion" help="Choose the method how to insert additional points.">
      <option value="from_line_center">from line center</option>
      <option value="per_line">per line</option>
      <option selected="true" value="per_line_segment">per line segment</option>
    </param>
    <param name="DIST" type="float" value="1" optional="true" label="Insertion Distance" help="Point insertion distance [map units]."/>
    <param name="ADD_POINT_ORDER" type="select" optional="true" label="Add Point Order" help="Add point order as additional attribute.">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_POINTS" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_POINTS" type="select" label="Points" help="Points">
        <option value="application/json">json</option>
        <option value="application/vnd.google-earth.kml+xml">vnd.google-earth.kml+xml</option>
        <option value="text/xml">xml</option>
      </param>
      <param name="transmissionMode_POINTS" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_POINTS" format="xml" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_POINTS" format="vnd.google-earth.kml+xml" value="application/vnd.google-earth.kml+xml"/>
        <when input="outputType_POINTS" format="json" value="application/json"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Converts lines to points. Optionally inserts additional points in user-defined distances. ]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
