<tool name="SAGA.ta_morphometry.8" id="saga_ta_morphometry_8" version="1.0.0">
  <description>Multiresolution Index of Valley Bottom Flatness (MRVBF)</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayDEM False  output_data_MRVBF $output_data_MRVBF  output_data_MRRTF $output_data_MRRTF  name SAGA.ta_morphometry.8 DEM $DEM
T_SLOPE $T_SLOPE
T_PCTL_V $T_PCTL_V
T_PCTL_R $T_PCTL_R
P_SLOPE $P_SLOPE
P_PCTL $P_PCTL
UPDATE $UPDATE
CLASSIFY $CLASSIFY
MAX_RES $MAX_RES
prefer $prefer
response $response
outputType_MRVBF $OutputSection_MRVBF.outputType_MRVBF
transmissionMode_MRVBF $OutputSection_MRVBF.transmissionMode_MRVBF
outputType_MRRTF $OutputSection_MRRTF.outputType_MRRTF
transmissionMode_MRRTF $OutputSection_MRRTF.transmissionMode_MRRTF]]></command>
  <inputs>
    <param name="DEM" type="data" optional="false" label="Elevation" help="Elevation The following data types are allowed in the txt file:  tiff, x-ogc-aaigrid, png, x-ogc-envi" format="txt"/>
    <param name="T_SLOPE" type="float" value="16" optional="true" label="Initial Threshold for Slope" help="Initial Threshold for Slope"/>
    <param name="T_PCTL_V" type="float" value="0.4" optional="true" label="Threshold for Elevation Percentile (Lowness)" help="Threshold for Elevation Percentile (Lowness)"/>
    <param name="T_PCTL_R" type="float" value="0.35" optional="true" label="Threshold for Elevation Percentile (Upness)" help="Threshold for Elevation Percentile (Upness)"/>
    <param name="P_SLOPE" type="float" value="4" optional="true" label="Shape Parameter for Slope" help="Shape Parameter for Slope"/>
    <param name="P_PCTL" type="float" value="3" optional="true" label="Shape Parameter for Elevation Percentile" help="Shape Parameter for Elevation Percentile"/>
    <param name="UPDATE" type="select" optional="true" label="Update Views" help="Update Views">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="CLASSIFY" type="select" optional="true" label="Classify" help="Classify">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="MAX_RES" type="float" value="100" optional="true" label="Maximum Resolution (Percentage)" help="Maximum resolution as percentage of the diameter of the DEM."/>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_MRVBF" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_MRVBF" type="select" label="MRVBF" help="MRVBF">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_MRVBF" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_MRRTF" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_MRRTF" type="select" label="MRRTF" help="MRRTF">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_MRRTF" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_MRVBF" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_MRVBF" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_MRVBF" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_MRVBF" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_MRRTF" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_MRRTF" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_MRRTF" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_MRRTF" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Calculation of the 'multiresolution index of valley bottom flatness' (MRVBF) and the complementary 'multiresolution index of the ridge top flatness' (MRRTF). ]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
