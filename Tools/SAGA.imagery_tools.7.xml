<tool name="SAGA.imagery_tools.7" id="saga_imagery_tools_7" version="1.0.0">
  <description>Principal Component Based Image Sharpening</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayGRIDS True  isArrayPAN False  output_data_SHARPEN $output_data_SHARPEN  name SAGA.imagery_tools.7 GRIDS $GRIDS
PAN $PAN
METHOD $METHOD
RESAMPLING $RESAMPLING
PAN_MATCH $PAN_MATCH
OVERWRITE $OVERWRITE
prefer $prefer
response $response
outputType_SHARPEN $OutputSection_SHARPEN.outputType_SHARPEN
transmissionMode_SHARPEN $OutputSection_SHARPEN.transmissionMode_SHARPEN]]></command>
  <inputs>
    <param name="GRIDS" type="data" optional="false" label="Original Channels" help="Original Channels The following data types are allowed in the txt file:  png, x-ogc-envi, tiff, x-ogc-aaigrid" format="txt"/>
    <param name="PAN" type="data" optional="false" label="Panchromatic Channel" help="Panchromatic Channel The following data types are allowed in the txt file:  png, x-ogc-envi, tiff, x-ogc-aaigrid" format="txt"/>
    <param name="METHOD" type="select" optional="true" label="Method" help="Method">
      <option value="correlation_matrix">correlation matrix</option>
      <option value="sums-of-squares-and-cross-products_matrix">sums-of-squares-and-cross-products matrix</option>
      <option selected="true" value="variance-covariance_matrix">variance-covariance matrix</option>
    </param>
    <param name="RESAMPLING" type="select" optional="true" label="Resampling" help="Resampling">
      <option value="bilinear">bilinear</option>
      <option selected="true" value="cubic_convolution">cubic convolution</option>
      <option value="nearest_neighbour">nearest neighbour</option>
    </param>
    <param name="PAN_MATCH" type="select" optional="true" label="Panchromatic Channel Matching" help="Panchromatic Channel Matching">
      <option value="normalized">normalized</option>
      <option selected="true" value="standardized">standardized</option>
    </param>
    <param name="OVERWRITE" type="select" optional="true" label="Overwrite" help="overwrite previous output if adequate">
      <option selected="true" value="false">false</option>
      <option value="true">true</option>
    </param>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_SHARPEN" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_SHARPEN" type="select" label="Author did not provide help for this parameter... ">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_SHARPEN" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_SHARPEN" format="tiff" label="output_data_SHARPEN" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_SHARPEN" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_SHARPEN" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_SHARPEN" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <param name="response" value="document"/>
      <output name="output_data_SHARPEN" ftype="txt" value="output_data_SHARPEN.txt"/>
    </test>
  </tests>
  <help><![CDATA[Principal component based image sharpening.]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
