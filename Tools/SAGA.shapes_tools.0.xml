<tool name="SAGA.shapes_tools.0" id="saga_shapes_tools_0" version="1.0.0">
  <description>Create New Shapes Layer</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py output_data_SHAPES $output_data_SHAPES  name SAGA.shapes_tools.0 NAME '$NAME'
TYPE $TYPE
VERTEX $VERTEX
NFIELDS $NFIELDS
prefer $prefer
response $response
outputType_SHAPES $OutputSection_SHAPES.outputType_SHAPES
transmissionMode_SHAPES $OutputSection_SHAPES.transmissionMode_SHAPES]]></command>
  <inputs>
    <param name="NAME" type="text" value="New Shapes Layer" optional="true" label="Name" help="Name"/>
    <param name="TYPE" type="select" optional="true" label="Shape Type" help="Shape Type">
      <option value="Lines">Lines</option>
      <option value="Multipoint">Multipoint</option>
      <option selected="true" value="Point">Point</option>
      <option value="Polygon">Polygon</option>
    </param>
    <param name="VERTEX" type="select" optional="true" label="Vertex Type" help="Vertex Type">
      <option selected="true" value="x,_y">x, y</option>
    </param>
    <param name="NFIELDS" type="integer" value="2" optional="true" label="Number of Attributes" help="Number of Attributes"/>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_SHAPES" title="Select the appropriate transmission mode for the output format" expanded="true">
      <param name="outputType_SHAPES" type="select" label="Shapes" help="Shapes">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_SHAPES" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_SHAPES" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_SHAPES" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_SHAPES" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_SHAPES" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[Creates a new empty shapes layer of given type, which might be either point, multipoint, line or polygon.&lt;br/&gt;&lt;br/&gt;Possible field types for the attributes table are:&lt;br/&gt;- string&lt;br/&gt;- date&lt;br/&gt;- color&lt;br/&gt;- unsigned 1 byte integer&lt;br/&gt;- signed 1 byte integer&lt;br/&gt;- unsigned 2 byte integer&lt;br/&gt;- signed 2 byte integer&lt;br/&gt;- unsigned 4 byte integer&lt;br/&gt;- signed 4 byte integer&lt;br/&gt;- unsigned 8 byte integer&lt;br/&gt;- signed 8 byte integer&lt;br/&gt;- 4 byte floating point number&lt;br/&gt;- 8 byte floating point number&lt;br/&gt;- binary&lt;br/&gt;]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
