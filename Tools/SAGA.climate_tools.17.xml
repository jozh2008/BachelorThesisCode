<tool name="SAGA.climate_tools.17" id="saga_climate_tools_17" version="1.0.0">
  <description>Snow Cover</description>
  <requirements>
    <requirement version="3.9" type="package">python</requirement>
  </requirements>
  <version_command><![CDATA[interpreter filename.exe --version]]></version_command>
  <command><![CDATA[$__tool_directory__/Code/openapi.py isArrayT True  isArrayP True  output_data_DAYS $output_data_DAYS  output_data_MEAN $output_data_MEAN  output_data_MAXIMUM $output_data_MAXIMUM  output_data_QUANTILE $output_data_QUANTILE  name SAGA.climate_tools.17 T $T
P $P
QUANT_VAL $QUANT_VAL
TIME $TIME
MONTH $MONTH
prefer $prefer
response $response
outputType_DAYS $OutputSection_DAYS.outputType_DAYS
transmissionMode_DAYS $OutputSection_DAYS.transmissionMode_DAYS
outputType_MEAN $OutputSection_MEAN.outputType_MEAN
transmissionMode_MEAN $OutputSection_MEAN.transmissionMode_MEAN
outputType_MAXIMUM $OutputSection_MAXIMUM.outputType_MAXIMUM
transmissionMode_MAXIMUM $OutputSection_MAXIMUM.transmissionMode_MAXIMUM
outputType_QUANTILE $OutputSection_QUANTILE.outputType_QUANTILE
transmissionMode_QUANTILE $OutputSection_QUANTILE.transmissionMode_QUANTILE]]></command>
  <inputs>
    <param name="T" type="data" optional="false" label="Mean Temperature" help="Mean Temperature The following data types are allowed in the txt file:  x-ogc-envi, png, tiff, x-ogc-aaigrid" format="txt"/>
    <param name="P" type="data" optional="false" label="Precipitation" help="Precipitation The following data types are allowed in the txt file:  x-ogc-envi, png, tiff, x-ogc-aaigrid" format="txt"/>
    <param name="QUANT_VAL" type="float" value="50" optional="true" label="Value" help="Value"/>
    <param name="TIME" type="select" optional="true" label="Time" help="Time">
      <option value="April_-_June">April - June</option>
      <option value="January_-_March">January - March</option>
      <option value="July_-_September">July - September</option>
      <option value="October_-_December">October - December</option>
      <option value="Single_Month">Single Month</option>
      <option selected="true" value="Year">Year</option>
    </param>
    <param name="MONTH" type="select" optional="true" label="Month" help="Month">
      <option value="April">April</option>
      <option value="August">August</option>
      <option value="December">December</option>
      <option value="February">February</option>
      <option selected="true" value="January">January</option>
      <option value="July">July</option>
      <option value="June">June</option>
      <option value="March">March</option>
      <option value="May">May</option>
      <option value="November">November</option>
      <option value="October">October</option>
      <option value="September">September</option>
    </param>
    <param name="prefer" type="select" label="Choose the Prefer">
      <option selected="true" value="respond-async;return=representation">respond-async;return=representation</option>
      <option value="return=minimal">return=minimal</option>
      <option value="return=representation">return=representation</option>
    </param>
    <param name="response" type="select" label="Response Type" help="Choose 'raw' for raw data or 'document' for document data.">
      <option selected="true" value="document">document</option>
      <option value="raw">raw</option>
    </param>
    <section name="OutputSection_DAYS" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_DAYS" type="select" label="Snow Cover Days" help="Snow Cover Days">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_DAYS" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_MEAN" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_MEAN" type="select" label="Average" help="Average">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_MEAN" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_MAXIMUM" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_MAXIMUM" type="select" label="Maximum" help="Maximum">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_MAXIMUM" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
    <section name="OutputSection_QUANTILE" title="Select the appropriate transmission mode for the output format and the output value" expanded="true">
      <param name="outputType_QUANTILE" type="select" label="Quantile" help="Quantile">
        <option value="application/x-ogc-aaigrid">x-ogc-aaigrid</option>
        <option value="application/x-ogc-envi">x-ogc-envi</option>
        <option value="image/png">png</option>
        <option value="image/tiff">tiff</option>
      </param>
      <param name="transmissionMode_QUANTILE" type="select" label="Choose the transmission mode">
        <option selected="true" value="reference">reference</option>
        <option value="value">value</option>
      </param>
    </section>
  </inputs>
  <outputs>
    <data name="output_data_DAYS" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_DAYS" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_DAYS" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_DAYS" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_MEAN" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_MEAN" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_MEAN" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_MEAN" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_MAXIMUM" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_MAXIMUM" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_MAXIMUM" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_MAXIMUM" format="png" value="image/png"/>
      </change_format>
    </data>
    <data name="output_data_QUANTILE" format="tiff" hidden="false">
      <change_format>
        <when input="response" format="txt" value="document"/>
        <when input="outputType_QUANTILE" format="x-ogc-envi" value="application/x-ogc-envi"/>
        <when input="outputType_QUANTILE" format="x-ogc-aaigrid" value="application/x-ogc-aaigrid"/>
        <when input="outputType_QUANTILE" format="png" value="image/png"/>
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <output name="output_data" value="txt"/>
      <param name="response" value="document"/>
    </test>
  </tests>
  <help><![CDATA[The 'Snow Cover' tool uses a simple model to estimate snow cover statistics from climate data. When temperature falls below zero any precipitation is accumulated as snow. Temperatures above zero will diminish accumulated snow successively until it is gone completely. Simulation is done on a daily basis. If you supply the tool with monthly averages, temperatures will be interpolated using a spline and precipitation will be splitted into separate events. The latter is done with respect to the monthly mean temperature, i.e. the higher the temperature the more concentrated are precipitation events and vice versa. ]]></help>
  <citations>
    <citation type="bibtex">Josh</citation>
  </citations>
</tool>
